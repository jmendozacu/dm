<script type="text/javascript">
require.config({
    map: {
        '*': {
            'vimeo-api': 'https://player.vimeo.com/api/player.js'
        }
    }
});
require([
    'jquery',
    'vimeo-api'
], function ($, VimeoPlayer) {
    $(document).ready(function() {
        
        var margin = ($('.about-wrapper').width() - $(window).width()) / 2;
        $('.about-wrapper').css('marginLeft', margin);
        $('.about-wrapper').css('marginRight', margin);

        $('#about-video').height($('#about-video').width() * 0.75);
        $('#about-video').css('marginTop', -1 * $('#about-video').height() / 2);
        $('#about-video').prop('allow', 'autoplay');

        $('.about-wrapper .links li a img').each(function() {
            var $parent = $(this).parent();
            if (!$(this).next('span').length) {
                $parent.html('<span>' + $(this).parent().text() + '</span>');
                $parent.prepend($(this));
            }
            $(this).attr('src', $(this).attr('src').replace(/\"/g, ""));
            $parent.css('backgroundImage', 'url(' + $(this).attr('src') + ')');
        });

        setTimeout(function () {
            $('#about-video').prop('allow', 'autoplay');
            if ($(window).width() < 1280) {
                var player = new VimeoPlayer($('#about-video'));

                player.ready().then(function() {
                    player.play();
                });

                player.on('ready', function (data) {
                    player.play();
                });

                $('.about-video-wrapper').on('click', function () {
                    player.play();
                });
            } else {
                $('#about-video').attr('src', $('#about-video').attr('src') + '&start');
            }
        }, 100);
    });
});
</script>