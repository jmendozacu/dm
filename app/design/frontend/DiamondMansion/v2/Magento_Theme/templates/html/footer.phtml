        $(document).ready(function() {
            $(window).scroll(function () {
                if ($(window).width() < 1280 && $('.page-header').hasClass('active')) {
                    $('body').removeClass('sticky');
                    return;
                }

                if ($(window).scrollTop() > 0) {
                    $('body').addClass( "sticky");
                } else {
                    $('body').removeClass( "sticky");
                }
            });

            $(window).resize(function () {
                if ($(window).width() < 1280 && $('.page-header').hasClass('active')) {
                    $('body').removeClass('sticky');
                    return;
                }

