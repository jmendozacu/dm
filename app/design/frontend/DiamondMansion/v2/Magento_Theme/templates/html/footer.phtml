<script type="text/javascript">
    require([
        'jquery',
        'jquery-fancybox'
    ], function ($) {
        $(document).ready(function() {
            $(window).scroll(function () {
                if ($(window).width() < 1280 && $('.page-header').hasClass('active')) {
                    $('body').removeClass('sticky');
                    return;
                }

                var navPosition = 0;
                if ($('.header-notice').length) {
                    navPosition = $('.header-notice').outerHeight();
                }

                if ($(window).scrollTop() > navPosition) {
                    $('body').addClass( "sticky");
                } else {
                    $('body').removeClass( "sticky");
                }
            });

            $(window).resize(function () {
                if ($(window).width() < 1280 && $('.page-header').hasClass('active')) {
                    $('body').removeClass('sticky');
                    return;
                }

                var navPosition = 0;
                if ($('.header-notice').length) {
                    navPosition = $('.header-notice').outerHeight();
                }

                if ($(window).scrollTop() > navPosition) {
                    $('body').addClass( "sticky");
                }
            });

            $('#cms-privacy-policy').fancybox({
                src  : $(this).attr('href'),
                type : 'iframe',
                iframe : {
                    css : {
                        width : '800px',
                        maxHeight: '90%'
                    }
                }
            });

            $('#cms-terms-conditions').fancybox({
                src  : $(this).attr('href'),
                type : 'iframe',
                iframe : {
                    css : {
                        width : '800px',
                        maxHeight: '90%'
                    }
                }
            });

            $('body').delegate('.page.messages a[href*=\'/checkout/cart\']', 'click', function () {
                $('.show-cart').trigger('click');
                return false;
            });
        });
    });
</script>