<script>
    require(['jquery'], function($){
        'use strict';
        $('.block-search .block-title').click(function () {
            $('.block-search .block-content').toggle('fade', 'fast');
            if ($('.page-header').hasClass('active') && $('#nav li.over').length) {
                $('#shown-sub-wrapper').hide();
                $('#shown-sub-wrapper').html("");
